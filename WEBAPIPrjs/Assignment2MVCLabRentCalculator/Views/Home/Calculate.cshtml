@model Assignment2MVCLabRentCalculator.Models.Hall

@{
    ViewData["Title"] = "Calculate";
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-12">
            <h2>@Model.Name</h2>
        </dt> 
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            Owner:
        </dt>       
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HallOwner)
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            Cost per day:
        </dt>   
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostPerDay)
        </dd> 
    </dl>
    <dl class="row">
        <dd class = "col-sm-12">
            Renting from @Model.StartDate to @Model.EndDate
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Total cost:
        </dt>
        <dd class="col-sm-10">
            @ViewData["totalRent"].ToString()
        </dd>
    </dl>
</div>
