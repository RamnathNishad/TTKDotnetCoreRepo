@model AssignmentTicketBooking.Models.SeatingSection

@{
    
}


<h4>Ticket Booking</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <span>Show Name</span>
                <input />
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="SeatingType" class="control-label"></label>
                @Html.DropDownList("SeatingType",(IEnumerable<SelectListItem>)ViewData["lstSeatingType"])
                <span asp-validation-for="SeatingType" class="text-danger"></span>
            </div>
           <br/>
            <div class="form-group">
                <label asp-for="NoOfTickets" class="control-label"></label>
                <input asp-for="NoOfTickets" />
                <span asp-validation-for="NoOfTickets" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
                <input type="submit" value="Cancel" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
